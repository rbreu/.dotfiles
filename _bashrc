#export PS1="\u@\h:\W> "
case $TERM in
    mlterm*|xterm*|rxvt-unicode*)
	PS1="\[\033];\u@\h:\w\a\]\[\033[34m\]\u@\h:\W> \[\033[39m\]"
	;;
    linux)
	PS1="\[\033[34m\]\u@\h:\W> \[\033[39m\]"
	sudo loadkeys ~/.linux_keys
	;;
    *)
	PS1="\[\033[34m\]\u@\h:\W> \[\033[39m\]"
esac

